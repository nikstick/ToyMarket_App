{
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "src",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {"./*": ["./src/*"]},
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "composite": true,
    "esModuleInterop": true,
	  "declaration": true
  },
  "include": [
    "src/**/*"
  ]
}
