{
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "src",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {"./*": ["./src/*"], "common/*": ["../common/*"]},
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "composite": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    {"path": "../common"}
  ]
}
